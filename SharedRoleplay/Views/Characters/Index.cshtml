@model IEnumerable<SharedRoleplay.Models.Character>

@{
    ViewData["Title"] = "Index";
}

<h1>Characters</h1>

<p>
    <a asp-action="Create">Create New Character</a>
</p>


<div class="container">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <a href="https://placeholder.com"><img src="https://via.placeholder.com/150.png?text=Place+holder+photo" class="card-img-top" alt="..."></a>
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.BackStory)</p>
                    <a class="btn btn-primary" href="/characters/details/@item.ID" role="button">Details</a>
                    <a class="btn btn-info" href="/characters/edit/@item.ID" role="button">Edit</a>
                    <a class="btn btn-danger" href="/characters/delete/@item.ID" role="button">Delete</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>
