@model SharedRoleplay.Models.Story

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Genre)</h4>
    <hr />
            <table class="table" title="@Html.DisplayNameFor(model => model.Scenes)">
                <tr>
                    <th>Scene Title</th>
                    <th>Setting</th>
                </tr>
                @foreach (var item in Model.Scenes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Setting)
                        </td>
                    </tr>
                }
            </table>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a class="btn btn-primary" asp-action="Index">Back to List</a> |
    <a class="btn btn-primary" asp-controller="Scenes" asp-action="Create" role="button">Add Scene</a>
</div>
